    @using EPiServer.Core
@using EPiServer.Web.Mvc.Html

@model CommerceTraining.Models.Pages.CheckOutViewModel

<div>
    Shipping rates

    @foreach (var shippingRate in Model.ShippingRate)
    {
        <div>
            @shippingRate.Name - 
            @shippingRate.Id - 
            @shippingRate.Money
        </div>
    }
</div>


<div>
    Make your choices
    @using (@Html.BeginForm("CheckOut", "Checkout", FormMethod.Post))
    {
        @Html.DropDownListFor(m => m.SelectedShipId, new SelectList(Model.ShippingMethods, "ShippingMethodId", "DisplayName"))
            @Html.DropDownListFor(m => m.SelectedPayId, new SelectList(Model.PaymentMethods, "PaymentMethodId", "Name"))

        <button type="submit">Check out</button>
    }
</div>